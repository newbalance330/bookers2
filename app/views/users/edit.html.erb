<p id="notice"></p>
<%= render 'users/info', users: @users %>
<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <label for="inputImage">Image</label>
  <%= f.attachment_field :profile_image, placeholder: "Image" %>
    <label for="inputi">Introduction</label>
  <%= f.text_field :introduction, autofocus: true, id:"inputintroduction", placeholder:"Introduction"%>
  <%= f.submit "Update User" %>
<% end %>