<p id="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">
   <%= render 'users/info', user: @user , book: @book %>
   <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
     <thead>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
      </tr>
     </thead>
     <tbody>
      <% @books.each do |book| %>
       <tr>
        <td>
         <%= attachment_image_tag book.user, :profile_image, size: "50x50", fallback: "no_image.jpg", class:"attachment user profile_image fallback" %>
        </td>
        <td>
         <%= link_to book_path(user.id) do %>
          <%= book.title %>
         <% end %>
        </td>
        <td>
         <%= book.body %>
        </td>
       </tr>
      <% end %>
     </tbody>
   </table>
  </div>
 </div>